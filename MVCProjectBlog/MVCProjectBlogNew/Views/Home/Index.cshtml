@using System.Web.Mvc.Html
@using Microsoft.AspNet.Identity
@model IEnumerable<BlogClassLibrary.Blog>

@{
    ViewBag.Title = "Index";
}
<link href="~/Styles/ViewStyles/HomeViewStyle.css" rel="stylesheet" />
@*<link href="~/Styles/ViewStyles/HomeViewStyleTest.css" rel="stylesheet" />*@
<div class="container">
    <div class="row">

        <div class="col-md-9 mainContent">
            <div class="container">
                <div class="row">
                  @Html.Action("CarousellPosts")
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3 AvailableBlogsContainer">

                            <h3 class="h3AvailableBlogsHeaderLink">
                                @*@Html.ActionLink(item.Name, "Index", "Post", new {id = item.Name}, null)*@
                                @Html.ActionLink(item.Name, "Index", "Blog", new {BlogId = item.Id}, null)

                            </h3>

                            <p class="ParagraphAvailableBlogsDescription">@Html.DisplayFor(modelItem => item.Description)</p>


                            

</div>
                       
                    }
                </div>
            </div>

            

        </div>
        <div class="col-md-3 sidebarContent">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 sidebarContentPlaceholder">
                        
                       
                        <h3>Search</h3>

                        @using (Ajax.BeginForm("SearchAutoComplete", "Home", new AjaxOptions
                        {
                            UpdateTargetId = "search_results"
                        }))
                        {
                            <input type="text" id="search_term" />
                            <input type="submit" value="Go!" />
                        }
                        

                    </div>
                    <div class="col-md-12 sidebarContentPlaceholder">

                        <h5>Latest Posts</h5>

                        @foreach (var blog in Model)
                        {

                            @Html.Partial("_postHeader", blog.Posts)

                        }
                       
                    </div>
                    <div class="col-md-12 sidebarContentPlaceholder">
                        <h5>Top-Ten hashtags</h5>
                        @foreach (var blog in Model)
                        {

                            foreach (var post in blog.Posts)
                            {
                                @Html.Partial("_HashTags", post.Hashtags)
                            }


                        }

                    </div>
                </div>
             </div>

        </div>



   </div>
</div>
