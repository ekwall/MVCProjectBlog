@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>

    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.ui.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Styles/_BlogLayoutStyle.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/MainSiteScript.js"></script>
    <!-- *** fonts **** -->
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet' type='text/css'>

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 mainHeader">
                <div class="headerTextContainer headerContextElement">
                    <h3 class="blogHeaderHeadline">@ViewBag.HeaderMainText</h3>
                    <h4 class="blogHeaderDescription">@ViewBag.HeaderMainDescription</h4>
                </div>
                <div class="headerImageContainer headerContextElement">
                    <img class="blogHeaderImageElement" src="@ViewBag.HeaderImage" alt="" />
                </div>


            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <nav class="col-md-12 blogMainNavigation">
                <div class="headerTitle">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Blog Portal",
                                "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                </div>

                <div class="navigation">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { BlogId = @ViewBag.BlogId }, null)</li>

                            <li>@Html.ActionLink("About", "About", "Blog", new { BlogId = @ViewBag.BlogId }, null)</li>

                            @*<li>@Html.ActionLink("New with WYSIWYG", "Insert", new { id = @ViewBag.BlogId })</li>*@
                            

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("New Regular Post", "SubmitPost", new { id = @ViewBag.BlogId })</li>
                            }
                            

                        </ul>

                    </div>
                </div>

            </nav>


        </div> <!-- *** row end *** -->
    </div> <!-- ** container end ** -->

    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    <div class="container">
        <div class="row">
            <footer class="col-md-12 blogFooter">
                <div class="col-md-2 footerContent">
                    </div>
                    <div class="col-md-2 footerContent">
                        <h5>Links</h5>
                        

                        <p class="footerParaContent">Top</p>
                        <p class="footerParaContent">Portal</p>
                    </div>


                    <div class="col-md-2 footerContent">
                        <h5>About</h5>
                        <p class="footerParaContent">Author</p>
                        <p class="footerParaContent">Blog</p>
                        <p class="footerParaContent">Privacy policy</p>
                        <p class="footerParaContent">Terms Of Service</p>
                        <p class="footerParaContent">Cookies</p>
                    </div>
                    <div class="col-md-2 footerContent">
                        <h5>Help</h5>
                        <p class="footerParaContent">Help Center</p>
                        <p class="footerParaContent">Get started</p>
                        <p class="footerParaContent">Contact</p>
                    </div>
                    <div class="col-md-2 footerContent">
                        <h5>Connect</h5>
                        <p class="footerParaContent">Facebook</p>
                        <p class="footerParaContent">Twitter</p>
                        <p class="footerParaContent">Instagram</p>
                        <p class="footerParaContent">LinkedIn</p>
                        
                    </div>
</footer>
        </div>
    </div>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>